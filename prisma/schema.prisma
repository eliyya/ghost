generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = "file:../local_database.db"
}

model User {
  id         String      @id
  username   String      @unique
  name       String
  password   String
  admin      Boolean?
  procedures Procedure[]

  @@map("users")
}

model Laboratory {
  id             String      @id
  name           String      @unique
  open_date      DateTime
  close_date     DateTime
  available_days Int         @default(62)
  procedures     Procedure[]
  tools          Tool[]

  @@map("labs")
}

model Procedure {
  id            String     @id
  submiter_id   String
  lab_id        String
  start_date    DateTime
  end_date      DateTime
  subject       String
  practice_name String
  students      Int
  created_at    DateTime   @default(now())
  submiter      User       @relation(fields: [submiter_id], references: [id])
  lab           Laboratory @relation(fields: [lab_id], references: [id])
  tools         Tool[]

  @@map("procedures")
}

model Tool {
  id         String      @id
  name       String
  lab_id     String
  stock      Int         @default(1)
  lab        Laboratory  @relation(fields: [lab_id], references: [id])
  procedures Procedure[]

  @@map("tools")
}
